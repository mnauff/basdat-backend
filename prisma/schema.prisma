generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id           String   @id @unique @default(uuid())
  accountId    String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  role         Role     @default(STUDENT)
  refreshToken String?
  student      Student?
}

model Student {
  studentId  String   @id @unique
  name       String
  email      String
  finalGrade Decimal?
  accountId  String?  @unique
  group      Group[]
  groupId    String?
  account    Account? @relation(fields: [accountId], references: [accountId])

  @@index([groupId])
}

model Group {
  groupId     String    @id @unique @default(uuid())
  student     Student[]
  grade       Decimal?
  practicum   Practicum @relation(fields: [practicumId], references: [practicumId])
  practicumId String    @unique
}

model Practicum {
  practicumId String   @id @unique @default(uuid())
  name        String
  place       String
  time        DateTime
  group       Group[]
  modules     Module[]
}

model Module {
  moduleId    String    @id @unique @default(uuid())
  name        String
  practicum   Practicum @relation(fields: [practicumId], references: [practicumId])
  practicumId String

  @@index([practicumId])
}

enum Role {
  ADMIN
  STUDENT
}
